    <EditText
        android:id="@+id/nameSession"
        android:layout_width="346dp"
        android:layout_height="58dp"
        android:layout_margin="10dp"
        android:layout_marginTop="5dp"
        android:background="#30432F2F"
        android:hint="Session name"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/creSession" />

  <!--  Create code for spinner  -->
  <!--   I created an array of all the times in strings.xml -->
    <TextView
        android:layout_width="346dp"
        android:layout_height="58dp"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:background="#30432F2F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameSession" />

    <Spinner
        android:id="@+id/locationSpinner"
        android:layout_width="346dp"
        android:layout_height="58dp"
        android:layout_margin="10dp"
        android:layout_marginTop="5dp"
        android:hint="Session Location"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameSession" />

    <Button
        android:id="@+id/create_session_btn"
        android:layout_width="177dp"
        android:layout_height="50dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/custom_button"
        android:text="Create Session"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button4"
        android:layout_width="150dp"
        android:layout_height="59dp"
        android:layout_marginTop="3dp"
        android:background="#900A9CFD"
        android:text="Muscle"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutDesc" />

    <Button
        android:id="@+id/datePickerButton"
        style="?android:spinnerStyle"
        android:layout_width="350dp"
        android:layout_height="58dp"
        android:layout_marginTop="96dp"
        android:background="#30432F2F"
        android:gravity="center_horizontal"
        android:text="01 01 2020"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameSession" />

    <TextView
        android:id="@+id/selectDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Select Date:"
        android:textColor="#3E3535"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/datePickerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameSession"
        app:layout_constraintVertical_bias="0.959" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="32dp"
        android:background="#30432F2F"
        android:hint="Session Description"
        android:textColorHint="#FFFFFF"
        app:counterEnabled="true"
        app:counterMaxLength="50"
        app:endIconMode="clear_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timePickerButton">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/selectTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:text="Select Time:"
        android:textColor="#3E3535"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/timePickerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datePickerButton"
        app:layout_constraintVertical_bias="0.588" />

    <Button
        android:id="@+id/timePickerButton"
        style="?android:spinnerStyle"
        android:layout_width="350dp"
        android:layout_height="58dp"
        android:layout_marginTop="31dp"
        android:background="#30432F2F"
        android:gravity="center_horizontal"
        android:text="9:30"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datePickerButton" />


    <ImageView
        android:id="@+id/basicImage"

        android:layout_width="162dp"
        android:layout_height="119dp"
        android:src="@drawable/base_muscle_select"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <ImageView
        android:id="@+id/armImage"

        android:layout_width="48dp"
        android:layout_height="37dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="52dp"
        android:src="@drawable/arms"
        app:layout_constraintEnd_toEndOf="@+id/basicImage"
        app:layout_constraintStart_toStartOf="@+id/basicImage"
        app:layout_constraintTop_toTopOf="@+id/basicImage" />

    <ImageView
        android:id="@+id/chestImage"

        android:layout_width="24dp"
        android:layout_height="25dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="95dp"
        android:src="@drawable/chest"
        app:layout_constraintEnd_toEndOf="@+id/basicImage"
        app:layout_constraintStart_toStartOf="@+id/basicImage"
        app:layout_constraintTop_toTopOf="@+id/basicImage" />

    <ImageView
        android:id="@+id/legImage"
        android:layout_width="24dp"
        android:layout_height="76dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="92dp"
        android:src="@drawable/legs"
        app:layout_constraintEnd_toEndOf="@+id/basicImage"
        app:layout_constraintStart_toStartOf="@+id/basicImage"
        app:layout_constraintTop_toTopOf="@+id/basicImage" />

    <ImageView
        android:id="@+id/backImage"

        android:layout_width="26dp"
        android:layout_height="35dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="36dp"
        android:src="@drawable/back"
        app:layout_constraintEnd_toEndOf="@+id/basicImage"
        app:layout_constraintStart_toStartOf="@+id/basicImage"
        app:layout_constraintTop_toTopOf="@+id/basicImage" />

