<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bl_wht_backgrd"
    tools:context=".findSession">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="184dp"
        android:layout_height="37dp"
        android:background="@drawable/sessions_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04000002" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="148dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="none"
        android:text="Temp Username"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.029999971" />

    <Spinner
        android:id="@+id/locationSpinner"
        android:layout_width="346dp"
        android:layout_height="58dp"
        android:layout_margin="10dp"
        android:hint="Session Location"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fndSession" />

    <TextView
        android:layout_width="346dp"
        android:layout_height="58dp"
        android:layout_margin="10dp"
        android:background="#30432F2F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fndSession" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/ic_baseline_arrow_back_ios_new_24"
        android:padding="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/selectDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Select Date:"
        android:textColor="#3E3535"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationSpinner" />
    <TextView
        android:id="@+id/selectTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:text="Select Time:"
        android:textColor="#3E3535"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/timePickerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datePickerButton"
        app:layout_constraintVertical_bias="0.588" />

    <Button
        android:id="@+id/timePickerButton"
        style="?android:spinnerStyle"
        android:layout_width="350dp"
        android:layout_height="58dp"
        android:layout_marginTop="31dp"
        android:background="#30432F2F"
        android:gravity="center_horizontal"
        android:text="9:30"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datePickerButton" />

    <Button
        android:id="@+id/datePickerButton"
        style="?android:spinnerStyle"
        android:layout_width="350dp"
        android:layout_height="58dp"
        android:layout_marginTop="5dp"
        android:background="#30432F2F"
        android:gravity="center_horizontal"
        android:text="01 01 2020"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectDate" />

    <TextView
        android:id="@+id/fndSession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Find Session"
        android:textColor="#3E3535"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.089999974" />
    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginStart="18dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:src="@drawable/home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/searchButton"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginStart="18dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:src="@drawable/search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/homeButton" />

    <ImageButton
        android:id="@+id/profileButton"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginEnd="18dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:src="@drawable/friends"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/messageButton"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginEnd="18dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:src="@drawable/message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/profileButton" />

    <Button
        android:id="@+id/FindSessionBtn"
        android:layout_width="177dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_button"
        android:text="Search"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/basicImage" />

    <Button
        android:id="@+id/button4"
        android:layout_width="138dp"
        android:layout_height="57dp"
        android:layout_marginTop="10dp"
        android:background="#900A9CFD"
        android:text="Muscle"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timePickerButton" />

    <ImageView
        android:id="@+id/basicImage"

        android:layout_width="162dp"
        android:layout_height="119dp"
        android:src="@drawable/base_muscle_select"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <ImageView
        android:id="@+id/armImage"

        android:layout_width="48dp"
        android:layout_height="37dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="52dp"
        android:src="@drawable/arms"
        app:layout_constraintEnd_toEndOf="@+id/basicImage"
        app:layout_constraintStart_toStartOf="@+id/basicImage"
        app:layout_constraintTop_toTopOf="@+id/basicImage" />

    <ImageView
        android:id="@+id/chestImage"

        android:layout_width="24dp"
        android:layout_height="25dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="95dp"
        android:src="@drawable/chest"
        app:layout_constraintEnd_toEndOf="@+id/basicImage"
        app:layout_constraintStart_toStartOf="@+id/basicImage"
        app:layout_constraintTop_toTopOf="@+id/basicImage" />

    <ImageView
        android:id="@+id/legImage"
        android:layout_width="24dp"
        android:layout_height="76dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="92dp"
        android:src="@drawable/legs"
        app:layout_constraintEnd_toEndOf="@+id/basicImage"
        app:layout_constraintStart_toStartOf="@+id/basicImage"
        app:layout_constraintTop_toTopOf="@+id/basicImage" />

    <ImageView
        android:id="@+id/backImage"

        android:layout_width="26dp"
        android:layout_height="35dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="36dp"
        android:src="@drawable/back"
        app:layout_constraintEnd_toEndOf="@+id/basicImage"
        app:layout_constraintStart_toStartOf="@+id/basicImage"
        app:layout_constraintTop_toTopOf="@+id/basicImage" />

</androidx.constraintlayout.widget.ConstraintLayout>